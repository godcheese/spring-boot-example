<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.godcheese.example3.mapper.RoleAuthorityMapper">
    <resultMap id="BaseResultMap" type="com.godcheese.example3.entity.RoleAuthorityEntity">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="role_id" property="roleId" jdbcType="BIGINT"/>
        <result column="authority_id" property="authorityId" jdbcType="BIGINT"/>
    </resultMap>

    <sql id="TableName">
        `role_authority`
    </sql>

    <sql id="BaseColumnList">
        `id`, `role_id`, `authority_id`
    </sql>

    <select id="listByRoleId" resultMap="BaseResultMap">
        SELECT
        <include refid="BaseColumnList"/>
        FROM
        <include refid="TableName"/>
        WHERE `role_id` = #{roleId}
    </select>

</mapper>