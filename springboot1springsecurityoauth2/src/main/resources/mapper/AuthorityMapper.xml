<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gioov.springboot1springsecurityoauth2.mapper.AuthorityMapper">
    <resultMap id="BaseResultMap" type="com.gioov.springboot1springsecurityoauth2.mapper.entity.AuthorityEntity">
        <id column="id" property="id" jdbcType="BIGINT" />
        <result column="value" property="value" jdbcType="VARCHAR" />
    </resultMap>
    
    <sql id="TableName">
    `authority`
    </sql>
    
    <sql id="BaseColumnList">
        `id`, `value`
    </sql>

    <select id="getOne" resultMap="BaseResultMap">
        SELECT
        <include refid="BaseColumnList" />
        FROM <include refid="TableName"/> WHERE id = #{id}
    </select>

</mapper>